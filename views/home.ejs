<%- include('partials/header'); -%>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Portfolio</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="/css/style_home.css">
</head>
<body>
<div class="container-fluid">
  
    <h1>Order </h1>
<div class="row">   
    <div class="col-2 border-right ">
        <h4>Stocks</h4>
        <div class='row'>
          <div class="col-sm-12">
              <% stock.forEach(function(stock) { %>
            <div class="card2">
                <div class="card-body">
                  <div class='row'>
                    <div class="col-sm-6"><%= stock.sym %></div>
                    <div class="col-sm-6"><%= stock.price %></div>
                  </div>
                </div>
            </div>
            <% })   %>
          
          </div>
        </div>
    </div>
    <div class="Col">
    
    
       
    <div class="container">

        <div class="row row-content">
          <div class="col-sm-12">
            <div class="card1">
              <div class="card-body">
                  <div class="col-sm"> Wallet Balance: <%= currentUser.balance %></div>
                  <div class="col-sm">Total Stocks Held : 12</div>
                  <div class="col-sm">Profits:1000</div>
              </div>
            </div>
          </div>
        </div>
        <br><br>
        <div class="row row-content">
          <% stock.forEach(function(stock) { %>
              
          <div class="col-sm-4">
              <div class="card" style="width: 20rem;">
                  <div class="card-body">
                    <h5 class="card-title"><%= stock.sym %></h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= stock.name %> (<%= stock.industry %>)</h6>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    
                    <i class="fas fa-rupee-sign" aria-hidden="true"><%= stock.price %></i>
                  <br><br>
                  <div class="row">
                    <div class="col-sm-3">Qty: </div>

                    <div class="col-sm-8">
                      <div class="number-input sm-number-input">
                        <button class='btn-outline-danger' onclick="this.parentNode.querySelector('input[type=number]').stepDown()"><i class="fa fa-minus" aria-hidden="true"></i></button>
                        <input class="quantity" min="1" name="quantity" id="quantity" value="1" type="number">
                        <button class='btn-outline-success'  onclick="qty()"><i class="fa fa-plus" aria-hidden="true"></i></button>
                      </div>
                    </div>
                    <div class="col-sm-2"></div>
                  </div>
                  <br>
                    <div class="row">
                      <div class='col-sm-1'></div>
                      <div class='col-sm-5'>
                        <form name="form" method="POST">    
                          <input type="hidden" name="sym" value="<%= stock.sym %>">
                          <input type="hidden" name="price" value="<%= stock.price %>">
                          <input type="hidden" name="numStocks" id="qty" value=""/>                         
                          <a name="" id="" class="btn btn-block btn-outline-success" role="button" type="submit">BUY</a>
                        </form>
                      </div>
                      <div class='col-sm-5'>
                          <a name="" id="" class="btn btn-block btn-outline-danger" href="#" role="button">SELL</a>
                      </div>
                      <div class='col-sm-1'></div>
                    </div>
                  </div>
                </div>
          </div>
          <% })   %>
        </div>

          
            
          
          

        
        </div>
            

        </div>
        
        
    </div>


    </div>
</div>
</body>
<script>
  function qty(){
    document.querySelector('#quantity').stepUp()
    var qty = document.getElementById('quantity').value
    document.getElementById('qty').value = qty
    // document.forms["form"].submit();

  }
</script>
<%- include('partials/footer'); -%>
  