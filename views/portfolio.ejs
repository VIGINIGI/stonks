<%- include('partials/header'); -%>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Untitled</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="/css/style-portfolio.css">
</head>


<body>
    <div class="container">
        <div class="row">
            <table class="table table-hover table-dark">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Symbol</th>
                    <th scope="col">Qty</th>
                    <th scope="col">CostAvg.</th>
                    <th scope="col">LTP</th>
                    <th scope="col">Cur. Val</th>
                    <th scope="col">P&L</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <th scope="row">1</th>
                    <% s1.forEach(function(s1) { %>
                    <td><%= s1.sym %></td>
                    <td><%= s1.numStocks %></td>
                    <td><i class="fas fa-rupee-sign"></i><%= (s1.price*9/10)*(s1.numStocks*10/11) %></td>
                    <td><i class="fas fa-rupee-sign"></i><%= s1.price %></td>
                    <td><i class="fas fa-rupee-sign"></i><%= s1.price*s1.numStocks %></td>
                    <td><i class="fas fa-rupee-sign"></i><%= (s1.price*s1.numStocks)-((s1.price*9/10)*(s1.numStocks*10/11)) %></td>
                    <% })   %>
                </tr>
                <tr>
                    <th scope="row">2</th>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                </tr>
                <tr>
                    <th scope="row">3</th>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                </tr>
                <tr>
                    <th scope="row">4</th>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                </tr>
                <tr>
                    <th scope="row">5</th>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                </tr>               
                </tbody>
            </table>
        </div>
        <br><br>
        <div class="row">
            <div class="col-sm-4">
                <h1>ABC</h1>
                <h6>Total investment</h6>
            </div>
            <div class="col-sm-4">
                <h1>ABC</h1>
                <h6>Current Value</h6>
            </div>
            <div class="col-sm-4">
                <h1>ABC</h1>
                <h6>Profit & Loss</h6>
            </div>
        </div>
    </div>
</body>